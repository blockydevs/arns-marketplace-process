{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"config/*": ["config/*"],
			"common/*": ["common/*"],
			"helpers/*": ["helpers/*"],
			"services/*": ["services/*"]
		}
	},
	"include": ["src", "cli"],
	"exclude": ["node_modules", "dist"]
}
